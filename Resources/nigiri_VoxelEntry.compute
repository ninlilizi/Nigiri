		float greenDiff2 = saturate((voxelGrid[voxelPosition.xyz].g + newMixedColor.g) * 0.5);
		float blueDiff2 = saturate((voxelGrid[voxelPosition.xyz].b + newMixedColor.b) * 0.5);

		/*if (lumaDiff < lumaThreshold)
